{
    "model" : {
        "backend":              "MobileNet",
        "input_size_w":         224,
        "input_size_h":         224,
        "gray_mode":            false,
        "anchors":              [5.49950,8.57597, 9.26930,17.66783, 10.56113,10.43321, 15.44298,23.17856, 34.00303,34.41259],
        "labels":               ["MESCHA", "SITTOR", "MESBLE", "MESNON", "PINARB", "ACCMOU", "ROUGOR", "VEREUR", "TOUTUR", "ECUROU", "PIEBAV", "MULGRI", "MESNOI", "MESHUP", "PINNOR"],
        "unwanted_labels":      ["noBird", "unknown"]
    },

    "data" : {
        "base_path":            "/home/dams1309/raw_data",
        "train_csv_file":       "data/inputs/input_train_trainset.csv",
        "valid_csv_file":       "data/inputs/input_train_validset.csv",
        "test_csv_file":        ["data/inputs/input_test.csv"], 
        "saved_weight_path":    "data/saved_weights/",
        "saved_pickles_path":   "data/pickles"
    },

    "train": {
        "train_times":          1,
        "pretrained_weights":   "data/saved_weights/pre_weights/ADAM_CDR_v2_sampling_bestLoss.h5",
        "freeze":               false,
        "batch_size":           16,
        "learning_rate":        1e-3,
        "nb_epochs":            120,

        "workers":              12,
        "max_queue_size":       40,
        "early_stop":           false,
        "tensorboard_log_dir":  "./logs/1",

        "optimizer": {
            "name":                         "Adam",
            "beta_1":                       0.9,
            "beta_2":                       0.999,
            "epsilon":                      1e-08,
            "decay":                        0.0,
            "lr_scheduler": {
                "name":                     "CosineDecayRestarts",
                "initial_learning_rate":    1e-3,
                "first_decay_steps":        1000,
                "t_mul":                    2.0,
                "m_mul":                    0.6,
                "alpha":                    0.0
            }
        },

        "object_scale":         5.0 ,
        "no_object_scale":      1.0,
        "coord_scale":          1.0,
        "class_scale":          1.0,

        "augmentation":         "v2",
        "sampling":             true,
        "mosaic":               "none",

        "saved_weights_name":   "data/saved_weights/pre_weights/ADAM_CDR_v2_sampling.h5"
    },

    "valid": {
        "iou_threshold":        0.4,
        "score_threshold":      0.5
    }
}
